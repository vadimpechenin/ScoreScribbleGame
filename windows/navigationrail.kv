<Navigationrail>
    name: "Navigationrail"

    AKNavigationrail:
        id: rail

        AKNavigationrailCustomItem:
            size_hint_y: None

            height: dp(60)
            padding: dp(5)
            #md_bg_color: 1, 0, 1, 1

            MDIconButton:
                icon: "menu"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

                on_release:
                    if rail.get_state() == "open": rail.dismiss(); self.icon ="arrow-left"
                    else: rail.open(); self.icon="menu"

        AKNavigationrailItem:
            id: QRIcon
            text: "Новая"
            icon: "file-upload-outline"
            #md_bg_color: app.theme_cls.bg_darkest
            on_release: root.switchToNew()

        AKNavigationrailItem:
            text: "Продолжить"
            icon: "camera-plus-outline"
            on_release: root.switchToContinue()

        AKNavigationrailItem:
            id: profileIcon
            text: "Игра"
            icon: "account-circle-outline"
            on_release: root.switchToGame()


        AKNavigationrailItem:
            text: "Счет"
            icon: "file-cog-outline"
            on_release: root.switchToReport()

        AKNavigationrailItem:
            text: "Сохранить"
            icon: "view-list-outline"
            on_release: root.switchToSave()

        AKNavigationrailItem:
            text: "Настройки"
            icon: "cog"
            on_release: root.switchToSettings()

        AKNavigationrailItem:
            text: "Выйти"
            icon: "exit-to-app"
            on_release: root.switchToLogInOut()

        AKNavigationrailCustomItem:
            size_hint_x: 0.2

        AKNavigationrailContent:

            ScreenManager:
                id: scr_mng