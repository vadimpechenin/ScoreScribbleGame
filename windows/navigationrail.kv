<Navigationrail>
    name: "Navigationrail"

    AKNavigationrail:
        id: rail

        AKNavigationrailCustomItem:
            size_hint_y: None

            height: dp(60)
            padding: dp(5)
            #md_bg_color: 1, 0, 1, 1

            MDIconButton:
                icon: "menu"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1

                on_release:
                    if rail.get_state() == "open": rail.dismiss(); self.icon ="arrow-left"
                    else: rail.open(); self.icon="menu"

        AKNavigationrailItem:
            id: profileIcon
            text: "Профиль"
            icon: "account-circle-outline"
            on_release: root.switch_to_profile()

        AKNavigationrailItem:
            text: "Фото"
            icon: "camera-plus-outline"
            on_release: root.switchToPhoto()

        AKNavigationrailItem:
            id: QRIcon
            text: "Загрузить"
            icon: "file-upload-outline"
            #md_bg_color: app.theme_cls.bg_darkest
            on_release: root.switchToQR()

        AKNavigationrailItem:
            text: "Операция"
            icon: "file-cog-outline"
            on_release: root.switchToOparationMain()

        AKNavigationrailItem:
            text: "Номенклатура"
            icon: "view-list-outline"
            on_release: root.switchToFourth()


        AKNavigationrailItem:
            text: "Поиск"
            #icon: "magnify"
            icon: "align-vertical-bottom"
            on_release: root.switchToMainReport()

        AKNavigationrailItem:
            text: "Настройки"
            icon: "cog"
            on_release: root.switchToSettings()

        AKNavigationrailItem:
            text: "Выйти"
            icon: "exit-to-app"
            on_release: root.switchToLogInOut()

        AKNavigationrailCustomItem:
            size_hint_x: 0.2

        AKNavigationrailContent:

            ScreenManager:
                id: scr_mng