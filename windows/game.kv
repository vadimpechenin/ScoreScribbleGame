<GameWindow>
    name: "game"
    BoxLayout:
        orientation: 'vertical'
        rows: 6

        MDLabel:
            id: text_label
            halign: 'center'
            valign: 'top'
            size_hint_y: None
            padding_y: 15

        GridLayout:
            rows: 2
            MDLabel:
                id: text_label1
                color: 'black'
                pos_hint: {'center_x': .6, 'center_y': .5}
            MDLabel:
                id: text_label2
                color: 'black'
                pos_hint: {'center_x': .6, 'center_y': .5}

        BoxLayout:
            cols: 1
            TextInput:
                id: text_input1
                font_size: '45sp'
                multiline: True
                font_size: 15
                color: 'black'

        Button:
            text: 'Ввести'
            size_hint_y: None
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                root.addResult()

        Button:
            text: 'Пропустить'
            size_hint_y: None
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                root.addNullResult()

        Button:
            text: 'Общий счёт'
            size_hint_y: None
            height: '48dp'
            width: '420dp'
            #Обработчик
            on_release:
                root.reportWindow()